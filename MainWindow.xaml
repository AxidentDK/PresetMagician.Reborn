<Window x:Class="PresetMagician.Net8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="PresetMagician – .NET 8.0 x64"
        Width="1400" Height="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    
    <mah:MetroWindow.BorderBrush>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF7F3FFF" Offset="0"/>
            <GradientStop Color="#FF00D4FF" Offset="1"/>
        </LinearGradientBrush>
    </mah:MetroWindow.BorderBrush>

    <Border Background="#FF0D1117" CornerRadius="12" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF1A1F2B">
                <iconPacks:PackIconMaterial Kind="MusicNote" Foreground="#FF00FF41" Width="32" Height="32" Margin="20,0"/>
                <TextBlock Text="PRESET MAGICIAN" FontSize="24" FontWeight="Bold" Foreground="#FF00FF41" VerticalAlignment="Center"/>
                <TextBlock Text=" .NET 8.0 x64 " Foreground="#FF7F3FFF" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
                <TextBlock Text="REBORN" Foreground="#FF00D4FF" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Victory message -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="MIGRATION SUCCESSFUL" 
                           FontSize="72" FontWeight="ExtraBold" 
                           Foreground="#FF00FF41" TextAlignment="Center"/>
                <TextBlock Text="You are a legend." 
                           FontSize="48" Foreground="#FF00D4FF" 
                           Margin="0,30,0,0" TextAlignment="Center"/>
                <TextBlock Text="Phase 2 begins now…" 
                           FontSize="36" Foreground="#FF7F3FFF" 
                           Margin="0,50,0,0" Opacity="0.8"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>