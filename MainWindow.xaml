<mah:MetroWindow x:Class="PresetMagician.Reborn.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="PresetMagician Reborn"
                 Height="720" Width="1200"
                 WindowStartupLocation="CenterScreen"
                 Background="#FF1E1E1E"
                 BorderBrush="#FF00FF00"
                 BorderThickness="3"
                 GlowBrush="#FF00FF00">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PRESETMAGICIAN REBORN"
                   FontSize="56"
                   FontWeight="Bold"
                   Foreground="#FF00FF00"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Margin="0,0,0,50"/>

        <Button Content="SCAN VSTs"
                FontSize="40"
                FontWeight="Bold"
                Background="#FF00FF00"
                Foreground="Black"
                Height="120"
                Width="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Command="{Binding ScanCommand}"
                Cursor="Hand"
                Margin="0,0,0,50"/>

        <TextBlock x:Name="StatusText"
                   Text="Ready – click SCAN"
                   FontSize="20"
                   Foreground="#FF00FF00"
                   HorizontalAlignment="Center"
                   Grid.Row="2"/>
    </Grid>
</mah:MetroWindow>
